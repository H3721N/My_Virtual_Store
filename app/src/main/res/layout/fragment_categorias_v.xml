<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".vendedor.Nav_Fragment_Vendedor.FragmentCategoriasV">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCategorias"
            android:src="@drawable/categorias"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"

            />

        <!-- Nombre de la categoria -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            >
            <EditText
                android:id="@+id/inCategoria"
                android:hint="@string/inCategoria"
                android:drawableStart="@drawable/icon_categorias"
                android:drawablePadding="10dp"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- Agregar categoria a la db -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAgregarCat"
            android:text="@string/btnAgregarCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="8dp"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tvCategorias"
            android:layout_margin="5dp"
            tools:listitem="@layout/item_categoria_v"
            app:layout_manager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>