<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyAplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/mi_tiendita_online_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mi_tiendita_online_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mi_Tiendita_Virtual"
        tools:targetApi="31">
        <activity
            android:name=".vendedor.AgregarProductoActivity"
            android:exported="false" />
        <activity
            android:name=".SeleccionarTipoActivity"
            android:exported="false" />
        <activity
            android:name=".cliente.LoginClienteActivity"
            android:exported="false" />
        <activity
            android:name=".cliente.RegistroClientesActivity"
            android:exported="false" />
        <activity
            android:name=".vendedor.LoginVendedorActivity"
            android:exported="false" />
        <activity
            android:name=".vendedor.RegistroVendedorActivity"
            android:exported="false" />
        <activity
            android:name=".vendedor.MainActivityVendedor"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cliente.MainActivityCliente"
            android:exported="true" />
    </application>

</manifest>